{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "rules": {
    "no-default-export": true,
    "no-empty-interface": true,
    "object-literal-sort-keys": false,
    "no-console": true,
    "no-debugger": true,
    "no-eval": true,
    "triple-equals": true,
    "no-inferrable-types": true,
    "curly": [
      true,
      "ignore-same-line"
    ],
    "max-classes-per-file": [
      true,
      1
    ],
    "max-file-line-count": [
      true,
      200
    ],
    "typedef": [
      true,
      "call-signature",
      "property-declaration"
    ]
  }
}